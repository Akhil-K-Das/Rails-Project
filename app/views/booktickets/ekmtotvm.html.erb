<%= form_tag booktickets_search_date_ekmtotvm_path, method: :get do %>
<%= label_tag 'Search by date' %>
<%= date_field_tag :start_date, params[:start_date] %>
  
<%= submit_tag 'Search' %>
<% end %><br>

<%= form_tag booktickets_search_ekmtotvm_path , method: "get" do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search" %>
<% end %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>BusType</th>&emsp;
      <th>Bus</th>&emsp;
      <th>From</th>&emsp;
      <th>Departure Time</th>&emsp;
      <th>Duration</th>&emsp;
      <th>To</th>&emsp;
      <th>Arrival Time</th>&emsp;
      <th>Fare</th>&emsp;
      <th>Seats Availability</th>&emsp;
      <th>Date</th>&emsp;

     
      
      <!-- <th colspan="2"></th> -->
    </tr>
  </thead>
<tbody>
    <% @ekmtotvm.all.each do |bookticket| %>
        <tr>
          <td>
            <%= bookticket.bustype %>
          </td>

          <td>
            <%= link_to bookticket.bus, reservation_passenger_details_path  %>
          </td>

          <td>
            <%= bookticket.from %>
          </td>

          <td>
            <%= bookticket.departure %>
          </td>

          <td>
            <%= bookticket.duration %>
          </td>

          <td>
            <%= bookticket.to %>
          </td>

          <td>
            <%= bookticket.arrival %>
          </td>

          <td>
            <%= bookticket.fare %>
          </td>

          <td>
            <%= bookticket.seats_available %>
          </td>

          <td>
            <%= bookticket.date %>
          </td>
                
        </tr>   
  
<% end %>

</div>
</tbody>


