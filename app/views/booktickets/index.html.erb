<p style="color: green"><%= notice %></p>

<h1>Book Your Ticket</h1>



  <!-- Searche based on input and show result on another view -->

  <%= form_tag booktickets_new_path , method: "get" do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
  <% end %>

  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>BusType</th>&emsp;
      <th>Bus</th>&emsp;
      <th>From</th>&emsp;
      <th>Departure Time</th>&emsp;
      <th>Duration</th>&emsp;
      <th>To</th>&emsp;
      <th>Arrival Time</th>&emsp;
      <th>Fare</th>&emsp;
      <th>Seats Availability</th>&emsp;

     
      
      <!-- <th colspan="2"></th> -->
    </tr>
  </thead>
<tbody>
    <% @bookticket.all.each do |bookticket| %>
        <tr>
          <td>
            <%= bookticket.bustype %>
          </td>

          <td>
            <%= bookticket.bus %>
          </td>

          <td>
            <%= bookticket.from %>
          </td>

          <td>
            <%= bookticket.departure %>
          </td>

          <td>
            <%= bookticket.duration %>
          </td>

          <td>
            <%= bookticket.to %>
          </td>

          <td>
            <%= bookticket.arrival %>
          </td>

          <td>
            <%= bookticket.fare %>
          </td>

          <td>
            <%= bookticket.seats_available %>
          </td>
                
        </tr>   
  
<% end %>

</div>
</tbody>

</body>


